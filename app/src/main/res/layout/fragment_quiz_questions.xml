<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentXML"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionFragment">

    <ScrollView
        android:id="@+id/questionsFragmentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/map"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="178dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/questions" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Select The Correct Continent for The Countries ! " />


            <LinearLayout
                android:id="@+id/question1LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:alpha="0.7"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/continentQuestionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Country" />

                <LinearLayout
                    android:id="@+id/question1OptionsTextLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:id="@+id/question1ABCOPTIONSLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/continentRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/continentOptionA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="cursive"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <RadioButton
                                android:id="@+id/continentOptionB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="cursive"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <RadioButton
                                android:id="@+id/continentOptionC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="cursive"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>